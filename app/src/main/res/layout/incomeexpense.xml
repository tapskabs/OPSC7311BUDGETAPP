<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="574dp"
        android:layout_height="64dp"
        android:text="Add Exp/Inc"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="34dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Expense"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="172dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Income"
        tools:layout_editor_absoluteX="348dp"
        tools:layout_editor_absoluteY="172dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="238dp"
        android:layout_height="45dp"
        android:text="Amount"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="287dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="225dp"
        android:layout_height="36dp"
        android:text="Category"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="446dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="559dp"
        android:layout_height="48dp"
        android:entries="@array/category_options"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="496dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="237dp"
        android:layout_height="37dp"
        android:text="Date"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="605dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="656dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="193dp"
        android:layout_height="37dp"
        android:text="Description"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="776dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Cancel"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="992dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Save"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="992dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="(R)"
        android:inputType="numberDecimal"
        android:text="Rand"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="349dp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="optional"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="851dp" />
</androidx.constraintlayout.widget.ConstraintLayout>